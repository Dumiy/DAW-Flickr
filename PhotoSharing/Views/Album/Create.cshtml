@model PhotoSharing.Models.Album

@{
    ViewBag.Title = "Add Album";
}

@using (Html.BeginForm("Create", "Album", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2" for="Title">Add album title: </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                @Html.Hidden(nameof(PhotoSharing.Models.Photo.Id), new { Value = ViewBag.PhotoId })
                @{PhotoSharing.Models.Album album = new PhotoSharing.Models.Album();
                    album.Photos = new List<PhotoSharing.Models.Photo>();
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}