@model List<PhotoSharing.Models.Photo>
@{
    ViewBag.Title = "Home Page";
}
<p>
    @using (@Html.BeginForm("Index", "Home", FormMethod.Get))
    {
        <div>


            <div class="form-group">
                Search by:
                @Html.TextBox("search") <input type="submit" value="Search" class="btn btn-default" />
            </div>

    </div>
}
    </p>
<div class="row">
    @foreach (var photo in Model)
    {
        <div class="text-center" style="border: 1px solid gray;padding-bottom:10px;margin-bottom:10px">
            <h2>@photo.Title</h2>
            <a href="@Url.Action("Details", "Photos", new { id = photo.Id})">
                <img src="@Url.Content(photo.URL)" class="img-thumbnail" />

            </a>
        </div>
    }
</div>