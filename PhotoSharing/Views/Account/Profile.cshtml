
@model PhotoSharing.Models.ApplicationUser
@{
    ViewBag.Title = "Profile";
}

@using (Html.BeginForm("SaveProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Profile</h4>
    <hr />
    if (ViewBag.Saved != null && ViewBag.Saved)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> Profile saved successful!
        </div>
    }
        <div class="container">
            <div class="row">
                <div class="form-group col-sm">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group ">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group col-sm">
                    @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Model.Email
                    </div>
                </div>
            </div>
        </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
    @Html.HiddenFor(m => m.Id)
}